(define (gen-curl-command-string keyword limit)
  (sprintf "curl --silent --show-error  --max-time 10  --insecure  --header 'Content-Type: application/x-www-form-urlencoded' http://localhost:12929/henkan --data 'format=sexp' --data 'yomi=%s' --data 'limit=%d' --data 'method=normal' --data 'userid=%s' > /dev/null" keyword limit "benchuser"))


(define (henkan-with-same-keyword)
  (let1 cmd (gen-curl-command-string "Kanji" 1)
        (for-each
         (lambda (x)
           (display ".")
           (.system cmd))
         (range 100))
        (newline)))


(define (display-help)
  (print "Usage : ")
  (print "  sekka-benchmark samekey  .... henkan 1000 times with same keyword [kanji] "))


(define (main argv)
  (cond
   ((= 0 (length argv))
    (display-help))
   (else
    (let1 command (string->symbol (first argv))
      (cond
       ((eq? 'samekey command)
        (henkan-with-same-keyword))
       (else
        (errorf "Error: no such command [%s] \n" command )))))))

(main *argv*)
;;END-OF-SCRIPT
