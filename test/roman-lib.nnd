  (test* "kana->roman key duplicate check" 396 (length (uniq (sort hira-list)))))

(test* "hiragana -> roman-pattern0"
       '(
         (("ka" "ca") ("nn" "n" "q"))
         (("kz" "kn")))
       (gen-hiragana->roman-pattens "かん"))
